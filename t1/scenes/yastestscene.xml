        <spot id="unique_spot" enabled="1" angle="0.4" exponent="1" >
            <location x="0" y="2" z="2" w="1" />
            <target x="2" y="0" z="2" />
            <ambient r="0" g="0" b="0" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="0.1" g="0.1" b="0.1" a="1" />
